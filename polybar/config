[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = false

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = "01: Main ;"
ws-icon-1 = "02: Dev ;"
ws-icon-2 = "03: Term ;"
ws-icon-3 = "04: Firefox ;"
ws-icon-4 = "05: Skype ;"
ws-icon-5 = "06: Toptal ;"
ws-icon-6 = "07: Virtual ;"
ws-icon-7 = "08: Study ;"
ws-icon-8 = "09: Tmp ;"
ws-icon-9 = "10: Other ;"
ws-icon-default = 

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %icon%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #ffa922
label-focused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %icon%
label-unfocused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %icon%
label-visible-underline = #555555
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/date]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/scripts/datetime.sh
click-left = gnome-calendar

[module/pavolume]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down

[module/updates]
type = custom/script
interval = 1800
format = <label>
label = "%output%"
exec = ~/.config/polybar/scripts/updates.sh

[module/yaourt_updates]
type = custom/script
interval = 1800
format = <label>
label = "%output%"
exec = ~/.config/polybar/scripts/yaourt-updates.sh

[module/timer]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/scripts/timer-status.sh
click-left = ~/.config/polybar/scripts/timer-pause-continue.sh
click-middle = ~/.config/polybar/scripts/timer-switch.sh
click-right = ~/.config/polybar/scripts/timer-stop.sh
scroll-down = ~/.config/polybar/scripts/timer-change-task.sh

[module/screensaver]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/scripts/screensaver-suppressed.sh

[module/power]
type = custom/text
content = ""
click-left = oblogout

[module/weather]
type = custom/script
interval = 1800
format = <label>
exec = ~/.config/polybar/scripts/weather

[module/load_average]
type = custom/script
interval = 20
format = <label>
label = "%output%"
exec = ~/.config/polybar/scripts/load-average.sh

[module/xbanish]
type = custom/script
interval = 604800
format = <label>
label = ""
exec = dummy.sh
click-left = ~/.config/polybar/scripts/xbanish.sh

[module/xe]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/xe.sh

[module/hn]
type = custom/script
label = %output%
tail = true
exec = ~/.config/polybar/scripts/scroll-hacker-news.sh
click-left = ~/.config/polybar/scripts/scroll-hacker-news-click.sh

[module/memfree]
type = custom/script
label = %output%
interval = 5
exec = ~/.config/polybar/scripts/mem-free.sh

[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-indicator>
label-indicator = CAPS

[module/windows]
type = custom/script
exec = dummy.sh
format  = <label>
label = 
interval = 60480000
click-left = /usr/bin/skippy-xd

[module/world_time]
type = custom/script
label = %output%
interval = 1
exec = ~/.config/polybar/scripts/world-time.sh

[module/uptime]
type = custom/script
label = %output%
interval = 30
exec = ~/.config/polybar/scripts/uptime.sh

[module/cpu_temp]
type = custom/script
label = %output%
interval = 30
exec = ~/.config/polybar/scripts/cpu-temp.sh

[module/internet]
type = custom/script
label = %output%
interval = 30
exec = ~/.config/polybar/scripts/internet.sh

