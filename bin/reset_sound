#!/bin/bash

SINK=`pacmd list-sinks | grep -zoP 'index[:] ([0-9]+).*\n.*Creative.*' | head -n 1 | awk -F ': ' '{ print $2; }'`
SOURCE=`pacmd list-sources | grep -zoP 'index[:] ([0-9]+).*\n.*Creative.*' | head -n 1 | awk -F ': ' '{ print $2; }'`

/usr/bin/pacmd set-default-sink $SINK
/usr/bin/pacmd set-default-source $SOURCE

/usr/bin/pacmd list-sink-inputs | grep index | awk -F ': ' '{ print $2; }' | xargs -I % /usr/bin/pacmd move-sink-input % $SINK
