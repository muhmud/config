# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Shortcuts for large resizing
        bindsym Ctrl+Down resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt
        bindsym Ctrl+Up resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt
        bindsym Ctrl+Left resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt;resize grow height 10 px or 10 ppt;resize grow width 10 px or 10 ppt;resize grow width 10 px or 10 ppt;resize grow width 10 px or 10 ppt;resize grow width 10 px or 10 ppt
        bindsym Ctrl+Right resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt;resize shrink height 10 px or 10 ppt;resize shrink width 10 px or 10 ppt;resize shrink width 10 px or 10 ppt;resize shrink width 10 px or 10 ppt;resize shrink width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# timer commands
mode "timer" {
        bindsym b exec --no-startup-id ~/.config/polybar/scripts/timer-set-base.sh;mode "default"
        bindsym s exec --no-startup-id ~/.config/polybar/scripts/timer-stop.sh;mode "default"
        bindsym p exec --no-startup-id ~/.config/polybar/scripts/timer-pause-continue.sh;mode "default"
        bindsym r exec --no-startup-id ~/.config/polybar/scripts/timer-pause-continue.sh;mode "default"
        bindsym t exec --no-startup-id ~/.config/polybar/scripts/timer-change-task.sh;mode "default"
        bindsym w exec --no-startup-id ~/.config/polybar/scripts/timer-switch.sh;mode "default"

        bindsym o exec --no-startup-id ~/.config/polybar/scripts/timer-switch-previous.sh;mode "default"
        bindsym q exec --no-startup-id ~/.config/i3/scripts/timer-task.sh;mode "default"

        # back to normal: Enter or Escape
        bindsym Escape mode "default"
}

bindsym $mod+x mode "timer"

mode "player" {
        bindsym s exec xdotool mousemove 3795 1900 click 1 key "alt+Tab" mousemove restore;mode "default"
        bindsym p exec xdotool mousemove 3095 1900 click 1 key "alt+Tab" mousemove restore;mode "default"
        bindsym f exec xdotool mousemove 3095 1900 click --repeat 2 1 mousemove restore key "alt+Tab";mode "default"
        bindsym o exec xdotool mousemove 3095 1900 click 1 key "alt+Tab" mousemove restore;exec --no-startup-id ~/.config/polybar/scripts/timer-pause-continue.sh;mode "default"
        bindsym n exec xdotool mousemove 3095 1900 click 1 key "space" mousemove restore;mode "default"
        bindsym m exec xdotool mousemove 3095 1900 click 1 key "space" mousemove restore;exec --no-startup-id ~/.config/polybar/scripts/timer-pause-continue.sh;mode "default"
        bindsym a exec xdotool mousemove 3755 1835 click 1 key "alt+Tab" mousemove restore;mode "default"
        bindsym z exec xdotool mousemove 3498 1895 click 1 key "alt+Tab" mousemove restore;mode "default"

        # back to normal: Enter or Escape
        bindsym Escape mode "default"
}

bindsym $mod+p mode "player"

